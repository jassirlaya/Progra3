%Hechos
es_estadounidense(coronelwest).
enemigo_de(estadosunidos,coreadelsur).
le_vende_armas_a(coronelwest,coreadelsur).

%Reglas
es_nacion_hostil(X):-
    enemigo_de(estadosunidos,X).

es_criminal(Y):-
    es_estadounidense(Y),
    le_vende_armas_a(Y,X),
    es_nacion_hostil(X).
