%REGLAS
abuela_de(Abuela, Nietx):-
    (madre_de(Abuela, Madre); madre_de(Abuela, Padre)), (madre_de(Madre, Nietx); padre_de(Padre, Nietx)).
abuelo_de(Abuelo, Nietx):-
    (padre_de(Abuelo, Madre); padre_de(Abuelo, Padre)), (madre_de(Madre, Nietx); padre_de(Padre, Nietx)).
hijo_de(X,Y):- 
    es_hombre(X),(padre_de(Y,X); madre_de(Y,X)).
hija_de(X,Y):- 
    es_mujer(X), (padre_de(Y,X); madre_de(Y,X)). 
hermano_de(X,Y):- 
    (es_hombre(X)), ((padre_de(Padre, X); madre_de(Madre, X)),(padre_de(Padre, Y); madre_de(Madre, Y))).
hermana_de(X,Y):- 
    (es_mujer(X)), ((padre_de(Padre, X); madre_de(Madre, X)),(padre_de(Padre, Y); madre_de(Madre, Y))).
tio_de(X,Y):- 
    (es_hombre(X)),((padre_de(Padre, Y), hermanx_de(X, Padre)); (madre_de(Madre, Y), hermanx_de(X, Madre))).
tia_de(X,Y):- 
    (es_mujer(X)),((padre_de(Padre, Y), hermanx_de(X, Padre)); (madre_de(Madre, Y), hermanx_de(X, Madre))).
primo_de(X,Y):- 
    (es_hombre(X)),(((padre_de(Tix, Y); madre_de(Tix, Y)), tix_de(Tix, X)); ((padre_de(Tix, X); madre_de(Tix, X),tix_de(Tix,Y)))).
prima_de(X,Y):- 
    (es_mujer(X)),(((padre_de(Tix, Y); madre_de(Tix, Y)), tix_de(Tix, X)); ((padre_de(Tix, X); madre_de(Tix, X),tix_de(Tix,Y)))).

